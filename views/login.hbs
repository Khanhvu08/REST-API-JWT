<div  class="container">
    <div class="login-content">
        <form method="post" action="/signin">
            <h2 class="title">Welcome Admin</h2>
            <div class="input-div one">
                <div class="div">
                    <input type="email" name="username"  placeholder="Email" class="inputUsr">
                </div>

            </div>

            <div class="input-div pass">
                <div class="div">
                    <input type="password" placeholder="Password" name="password" class="inputPwd">
                </div>
            </div>
            <input type="submit" class="btn" value="Sign in">
            <div class="register">
                <h3>Dont have account? </h3>
                <a class="btn-register text-decoration-none" href="register">Sign up</a>
            </div>
        </form>
    </div>
</div>